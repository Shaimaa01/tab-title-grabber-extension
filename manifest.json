{
  "manifest_version": 3,
  "name": "Tab Title Grabber",
  "version": "1.0",
  "description": "A simple extension to grab the title of the current tab.",
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
  }
}